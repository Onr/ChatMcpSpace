# Staging environment configuration
NODE_ENV=staging
PORT=8080
BASE_URL=https://staging.chatmcp.space
HTTPS_ENABLED=true
HTTPS_PORT=8443
HTTPS_KEY_PATH=/etc/letsencrypt/live/staging.chatmcp.space/privkey.pem
HTTPS_CERT_PATH=/etc/letsencrypt/live/staging.chatmcp.space/fullchain.pem
HTTPS_PASSPHRASE=
HTTPS_CA_PATH=
ENABLE_HTTP_REDIRECT=true
HTTP_REDIRECT_PORT=8080

# Database (populate from secret store)
DB_HOST=<STAGING_DB_HOST>
DB_PORT=<STAGING_DB_PORT>
DB_NAME=<STAGING_DB_NAME>
DB_USER=<STAGING_DB_USER>
DB_PASSWORD=<STAGING_DB_PASSWORD>

# Redis (shared for sessions and rate limits)
# Use REDIS_URL or host/port/password/db values
REDIS_URL=<STAGING_REDIS_URL>
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=<STAGING_REDIS_PASSWORD>
REDIS_DB=0
REDIS_SESSION_DB=0
REDIS_RATE_DB=1

# Sessions
SESSION_SECRET=<STAGING_SESSION_SECRET>

# Features
TTS_ENABLED=true
LOG_LEVEL=info

# Google TTS credentials (path on the server, not in git)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/staging-service-account.json
