# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agent_messaging_platform
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
# Optional: override individual pieces instead of REDIS_URL
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_DB=0
REDIS_RATE_DB=1

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# TLS (optional for local HTTPS)
HTTPS_ENABLED=false
HTTPS_PORT=3443
HTTPS_KEY_PATH=./keys/localhost-key.pem
HTTPS_CERT_PATH=./keys/localhost-cert.pem
HTTPS_CA_PATH=
HTTPS_PASSPHRASE=
ENABLE_HTTP_REDIRECT=false
HTTP_REDIRECT_PORT=3000

# Email Configuration (for email verification)
# For Gmail, use App Passwords: https://support.google.com/accounts/answer/185833
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Agent Messaging Platform
EMAIL_REPLY_TO=support@yourdomain.com

# Email Verification Settings
VERIFICATION_TOKEN_EXPIRY_HOURS=24

# Features
TTS_ENABLED=true
LOG_LEVEL=info

# Image Upload Configuration
MAX_IMAGE_SIZE_MB=20                    # Max image size in MB (supports 4K images)
MAX_IMAGES_PER_USER=10                  # Max stored images per user (oldest deleted when exceeded)

# Google OAuth Credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

