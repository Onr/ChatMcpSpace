<!-- Council Chamber Interface -->
<div id="dashboardRoot" data-encryption-salt="<%= encryptionSalt || '' %>"
    data-is-google-auth="<%= isGoogleAuth ? 'true' : 'false' %>"
    class="max-w-[1800px] mx-auto px-4 sm:px-6 lg:px-8 space-y-6 lg:h-[calc(100vh-8rem)] flex flex-col">

    <!-- Council Chamber - Main View -->
    <div class="grid gap-5 lg:grid-cols-[45fr,55fr] flex-1 lg:overflow-hidden min-h-0">

        <!-- Council Chamber Circle -->
        <div class="council-chamber glass-panel flex flex-col h-full relative overflow-hidden">
            <div id="mobileHeader" class="px-5 pt-3 pb-2 border-b border-white/5 z-10 transition-all duration-300">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2">
                        <!-- Header Nav Left -->
                        <button id="headerNavLeft"
                            class="mini-nav-btn mobile-header-nav-btn lg:hidden w-8 h-8 rounded-full bg-slate-800/80 border border-slate-700 flex items-center justify-center text-slate-400 hover:text-white transition"
                            aria-label="Previous Agent">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 19l-7-7 7-7" />
                            </svg>
                        </button>

                        <h2 class="text-xl font-semibold text-white mt-1 whitespace-nowrap">Council Chamber</h2>

                        <!-- Header Nav Right -->
                        <button id="headerNavRight"
                            class="mini-nav-btn mobile-header-nav-btn lg:hidden w-8 h-8 rounded-full bg-slate-800/80 border border-slate-700 flex items-center justify-center text-slate-400 hover:text-white transition"
                            aria-label="Next Agent">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 5l7 7-7 7" />
                            </svg>
                        </button>

                        <button id="collapseMobileListBtn"
                            class="lg:hidden w-6 h-6 rounded-full bg-white/10 flex items-center justify-center text-slate-400 hover:text-emerald-400 hover:bg-white/20 transition ml-1"
                            title="Expand List" aria-label="Expand agent list" type="button">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>
                    </div>
                    <div class="flex gap-2">
                        <button id="openDecryptionModalBtn" type="button"
                            class="px-3 py-1.5 rounded-full border border-white/10 bg-white/5 text-slate-400 hover:text-emerald-400 hover:border-emerald-400/50 hover:bg-emerald-400/10 transition text-xs flex items-center gap-2"
                            title="Set Decryption Password">
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                            </svg>
                            <span>Set Password</span>
                        </button>
                        <a href="/archive"
                            class="px-3 py-1.5 rounded-full border border-white/10 bg-white/5 text-slate-400 hover:text-amber-400 hover:border-amber-400/50 hover:bg-amber-400/10 transition text-xs flex items-center gap-2"
                            title="View Archived Agents">
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                            </svg>
                            <span>Archive</span>
                        </a>
                        <button id="voiceToggle" type="button"
                            class="px-3 py-1.5 rounded-full border border-white/10 bg-white/5 text-emerald-400 border-emerald-400/50 bg-emerald-400/10 hover:text-emerald-300 hover:border-emerald-400/50 transition text-xs flex items-center gap-2">
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />
                            </svg>
                            <span>Voice On</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Mobile Agent Dock (visible on small screens) -->
            <div class="mobile-agent-dock" id="mobileAgentDock">
                <!-- Navigation buttons are positioned outside the scrollable area -->
                <div class="dock-nav-container">
                    <!-- Left Navigation Arrow -->
                    <button class="dock-nav-btn dock-nav-btn--left" id="dockNavLeft" aria-label="Previous agents">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                    </button>

                    <!-- Right Navigation Arrow -->
                    <button class="dock-nav-btn dock-nav-btn--right" id="dockNavRight" aria-label="Next agents">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </button>

                    <div class="dock-carousel-stack">
                        <!-- Agent Carousel (scrollable) -->
                        <div class="dock-carousel" id="dockCarousel">
                            <!-- Agents will be populated dynamically by JavaScript -->
                        </div>


                    </div>
                </div>

                <!-- Position Indicator Dots -->
                <div class="dock-position-indicator" id="dockPositionIndicator">
                    <!-- Dots generated dynamically -->
                </div>

                <!-- Swipe/Drag Hints -->
                <div
                    class="dock-interaction-hints absolute bottom-1 left-0 right-0 flex justify-center items-center pointer-events-none opacity-50">
                    <div class="dock-drag-handle w-12 h-1 bg-white/20 rounded-full"></div>
                </div>
                <div class="dock-swipe-hint absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full flex justify-between px-12 pointer-events-none opacity-0 transition-opacity duration-500"
                    id="dockSwipeHint">
                    <svg class="w-6 h-6 text-white/20 animate-pulse" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    <svg class="w-6 h-6 text-white/20 animate-pulse" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </div>
            </div>

            <!-- Circular Agent Display -->
            <div id="councilCircle" class="flex-1 flex items-center justify-center p-8 min-h-0 relative">
                <div class="council-orbit">
                    <!-- Orbital rings that visualize urgency distance -->
                    <div class="council-rings pointer-events-none">
                        <div class="orbital-ring orbital-ring--urgent"></div>
                        <div class="orbital-ring orbital-ring--attention"></div>
                        <div class="orbital-ring orbital-ring--idle"></div>
                        <div class="orbital-label orbital-label--urgent">Urgent</div>
                        <div class="orbital-label orbital-label--attention">Needs reply</div>
                        <div class="orbital-label orbital-label--idle">All clear</div>
                    </div>

                    <!-- Center User Position -->
                    <div class="council-center absolute" style="left: 50%; top: 50%; transform: translate(-50%, -50%);">
                        <div
                            class="w-16 h-16 rounded-full border border-slate-500/30 flex items-center justify-center shadow-2xl shadow-emerald-900/50 backdrop-blur-xl relative overflow-hidden group cursor-pointer transition-transform duration-500 hover:scale-105">
                            <!-- Planet Image -->
                            <img src="/images/center-planet-v2.jpg" alt="You"
                                class="w-full h-full object-cover rounded-full" />
                            <div class="absolute inset-0 shadow-[inset_0_0_20px_rgba(0,0,0,0.5)] rounded-full"></div>
                        </div>
                        <p
                            class="text-center text-[10px] uppercase tracking-widest text-emerald-400/80 font-bold mt-4 text-shadow">
                            You</p>
                    </div>

                    <!-- Agent Seats (populated dynamically) -->
                    <div id="agentSeats" class="absolute inset-0">
                        <% if (agents && agents.length> 0) {
                            const ringRadii = { urgent: 26, attention: 36, idle: 46 };
                            const ringIndex = { urgent: 0, attention: 1, idle: 2 };
                            const orderedAgents = [...agents].sort((a, b) => (a.position || 0) - (b.position || 0));
                            const orbitLayout = {};
                            const totalAgents = orderedAgents.length;

                            if (totalAgents) {
                            orderedAgents.forEach((agent, index) => {
                            const ringKey = agent.lastMessagePriority === 'high' ? 'urgent' :
                            (agent.lastMessagePriority === 'normal' ? 'attention' : 'idle');
                            const radius = ringRadii[ringKey] ?? ringRadii.idle;
                            const ringIdx = ringIndex[ringKey] ?? ringIndex.idle;
                            const angle = (index * 360 / totalAgents) - 90;
                            const x = 50 + radius * Math.cos(angle * Math.PI / 180);
                            const y = 50 + radius * Math.sin(angle * Math.PI / 180);
                            orbitLayout[agent.agentId] = { x, y, ringKey, ringIndex: ringIdx };
                            });
                            }

                            orderedAgents.forEach((agent, index)=> {
                            const totalAgents = agents.length;
                            const positionValue = Number.isFinite(agent.position) ? agent.position :
                            Number(agent.position);
                            const safePosition = Number.isFinite(positionValue) ? positionValue : (index + 1);
                            const orbit = orbitLayout[agent.agentId] || { x: 50, y: 50, ringKey: 'idle', ringIndex:
                            ringIndex.idle };
                            const ringKey = orbit.ringKey;
                            const ringIdx = orbit.ringIndex;
                            const x = orbit.x;
                            const y = orbit.y;

                            // statusLabel uses lastMessagePriority for ring styling
                            const statusLabel = ringKey;
                            const needsAttention = agent.highestPriority === 'high' || agent.unreadCount > 0;

                            // Dynamic sizing
                            // Dynamic sizing - Standardized
                            let sizeClass = 'w-14 h-14';
                            %>
                            <div class="agent-seat absolute cursor-pointer transition-all duration-300 agent-seat--<%= statusLabel %> <%= needsAttention ? 'agent-seat--active' : '' %>"
                                data-agent-id="<%= agent.agentId %>" data-agent-name="<%= agent.name %>"
                                data-agent-priority="<%= agent.highestPriority %>"
                                data-agent-last-message-priority="<%= agent.lastMessagePriority || 'low' %>"
                                data-agent-unread="<%= agent.unreadCount %>"
                                data-agent-last-message="<%= agent.lastMessageTime ? agent.lastMessageTime : '' %>"
                                data-agent-last-activity="<%= agent.lastActivityTime ? agent.lastActivityTime : '' %>"
                                data-agent-ring="<%= ringKey %>" data-agent-ring-index="<%= ringIdx %>"
                                data-agent-index="<%= index %>"
                                style="left: <%= x %>%; top: <%= y %>%; transform: translate(-50%, -50%);">
                                <!-- Agent Number Badge -->
                                <div
                                    class="agent-number-badge absolute -top-6 left-1/2 -translate-x-1/2 z-30 pointer-events-none">
                                    <span
                                        class="text-[10px] font-mono font-bold text-sky-400/70 bg-slate-900/80 px-1.5 py-0.5 rounded border border-sky-400/30">
                                        <%= safePosition %>
                                    </span>
                                </div>
                                <!-- Agent Avatar -->
                                <div class="agent-avatar relative group w-fit mx-auto">
                                    <div
                                        class="<%= sizeClass %> rounded-full relative z-10 transition-transform duration-300 group-hover:scale-110 overflow-hidden border-2 border-white/10 shadow-2xl bg-slate-900">
                                        <div class="w-full h-full marble-container">
                                            <%- agent.marbleSvg %>
                                        </div>
                                        <!-- Agent Initials Overlay -->
                                        <div
                                            class="absolute inset-0 flex items-center justify-center pointer-events-none">
                                            <span class="text-white font-bold text-xl opacity-90"
                                                style="text-shadow: 0 2px 4px rgba(0,0,0,0.8), 0 0 2px rgba(0,0,0,0.5);">
                                                <%= agent.name.substring(0, 2).toUpperCase() %>
                                            </span>
                                        </div>
                                        <div
                                            class="absolute inset-0 rounded-full shadow-[inset_0_0_10px_rgba(0,0,0,0.5)] pointer-events-none">
                                        </div>
                                    </div>

                                    <!-- Status Indicator -->
                                    <% if (agent.highestPriority==='high' ) { %>
                                        <div
                                            class="absolute -top-1 -right-1 z-20 w-6 h-6 rounded-full bg-red-500 border-2 border-slate-900 animate-pulse shadow-[0_0_15px_rgba(239,68,68,0.6)] flex items-center justify-center">
                                            <span class="text-white text-xs font-bold">!</span>
                                        </div>
                                        <% } else if (agent.unreadCount> 0) { %>
                                            <div
                                                class="absolute -top-1 -right-1 z-20 w-6 h-6 rounded-full bg-amber-400 border-2 border-slate-900 flex items-center justify-center shadow-[0_0_15px_rgba(251,191,36,0.6)]">
                                                <span class="text-slate-900 text-xs font-bold">
                                                    <%= agent.unreadCount %>
                                                </span>
                                            </div>
                                            <% } else { %>
                                                <div class="absolute bottom-0 right-0 z-20 w-3 h-3 rounded-full bg-emerald-400 border-2 border-slate-900 shadow-[0_0_10px_rgba(52,211,153,0.6)]"
                                                    title="Waiting for instructions">
                                                </div>
                                                <% } %>
                                </div>

                                <!-- Agent Name -->
                                <div
                                    class="absolute top-full left-1/2 -translate-x-1/2 mt-3 w-max text-center opacity-80 group-hover:opacity-100 transition-opacity pointer-events-none">
                                    <p
                                        class="text-[10px] font-bold uppercase tracking-wider text-slate-200 text-shadow-sm">
                                        <%= agent.name %>
                                    </p>
                                </div>

                                <!-- Connection Line to Center -->
                                <svg class="connection-line absolute"
                                    style="position: absolute; top: 50%; left: 50%; pointer-events: none; overflow: visible; width: 200px; height: 200px; transform: translate(-50%, -50%); z-index: -1;">
                                    <line x1="100" y1="100" x2="100" y2="100" stroke="url(#gradient-<%= index %>)"
                                        stroke-width="1" />
                                    <defs>
                                        <linearGradient id="gradient-<%= index %>" x1="0%" y1="0%" x2="100%" y2="0%">
                                            <stop offset="0%" stop-color="rgba(16, 185, 129, 0)" />
                                            <stop offset="100%" stop-color="rgba(16, 185, 129, 0.4)" />
                                        </linearGradient>
                                    </defs>
                                </svg>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <div class="absolute inset-0 flex items-center justify-center">
                                        <div class="text-center text-slate-500">
                                            <svg class="w-16 h-16 mx-auto mb-4 text-slate-600 opacity-50" fill="none"
                                                stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                            </svg>
                                            <p class="text-sm font-medium tracking-wide">No agents in your
                                                council yet</p>
                                            <p class="text-xs text-slate-600 mt-1">Agents will appear here once
                                                they connect</p>
                                        </div>
                                    </div>
                                    <% } %>
                    </div>
                </div>

                <!-- Keyboard Hints -->
                <div class="absolute bottom-4 left-0 right-0 text-center pointer-events-none">
                    <p class="text-[10px] text-slate-500 font-medium tracking-wide uppercase opacity-60">
                        <span class="mx-1"><kbd class="font-sans">Tab</kbd> switch view</span>
                        <span class="mx-1">•</span>
                        <span class="mx-1"><kbd class="font-sans">←/→</kbd> or <kbd class="font-sans">J/K</kbd> to
                            move</span>
                        <span class="mx-1">•</span>
                        <span class="mx-1"><kbd class="font-sans">Enter</kbd> to chat</span>
                        <span class="mx-1">•</span>
                        <span class="mx-1"><kbd class="font-sans">Esc</kbd> back</span>
                    </p>
                </div>
            </div>


            <!-- Quick Stats Bar (Now Header) - Moved ABOVE list -->
            <div id="mobileStatsToggle"
                class="px-6 py-3 border-t border-white/5 bg-black/20 backdrop-blur group relative transition-colors z-20">
                <div class="grid grid-cols-3 gap-4 text-center text-xs">
                    <div>
                        <p class="text-emerald-400 font-bold text-lg" id="statsTotal">
                            <%= agents ? agents.length : 0 %>
                        </p>
                        <p class="text-slate-400">Total Agents</p>
                    </div>
                    <div>
                        <p class="text-amber-400 font-bold text-lg" id="statsAttention">
                            <%= agents ? agents.filter(a=> a.lastMessagePriority === 'normal').length : 0 %>
                        </p>
                        <p class="text-slate-400">Need Attention</p>
                    </div>
                    <div>
                        <p class="text-red-400 font-bold text-lg" id="statsUrgent">
                            <%= agents ? agents.filter(a=> a.lastMessagePriority === 'high').length : 0 %>
                        </p>
                        <p class="text-slate-400">Urgent</p>
                    </div>
                </div>
            </div>

            <!-- Agent List Panel (scrollable list below orbit) -->
            <div id="agentListPanel" class="agent-list-panel">
                <div class="agent-list-header flex items-center justify-between">
                    <div class="flex items-center gap-2">
                        <span class="agent-list-title">Agents</span>
                        <span class="agent-list-count" id="agentListCount">
                            <%= agents ? agents.length : 0 %>
                        </span>
                    </div>
                </div>
                <div class="agent-list-scroll" id="agentListScroll">
                    <% if (agents && agents.length> 0) {
                        const orderedAgents = [...agents].sort((a, b) => (a.position || 0) - (b.position || 0));
                        orderedAgents.forEach((agent, index) => {
                        const ringKey = agent.lastMessagePriority === 'high' ? 'urgent' :
                        (agent.lastMessagePriority === 'normal' ? 'attention' : 'idle');
                        const needsAttention = agent.highestPriority === 'high' || agent.unreadCount > 0;
                        %>
                        <div class="agent-list-item agent-list-item--<%= ringKey %> <%= needsAttention ? 'agent-list-item--attention' : '' %>"
                            data-agent-id="<%= agent.agentId %>" data-agent-name="<%= agent.name %>"
                            data-agent-type="<%= agent.agentType || 'standard' %>"
                            data-agent-priority="<%= agent.highestPriority %>"
                            data-agent-unread="<%= agent.unreadCount %>"
                            data-agent-last-activity="<%= agent.lastActivityTime ? agent.lastActivityTime : '' %>"
                            data-agent-last-message="<%= agent.lastMessageTime ? agent.lastMessageTime : '' %>">
                            <div class="agent-list-item__avatar">
                                <div class="agent-list-item__marble">
                                    <%- agent.marbleSvg %>
                                </div>
                                <span class="agent-list-item__initials">
                                    <%= agent.name.substring(0, 2).toUpperCase() %>
                                </span>
                            </div>
                            <div class="agent-list-item__info">
                                <span class="agent-list-item__name">
                                    <%= agent.name %>
                                </span>
                                <div class="agent-list-item__status-row">
                                    <span class="agent-list-item__status">
                                        <% if (agent.highestPriority==='high' ) { %>
                                            <span class="agent-list-item__badge agent-list-item__badge--urgent">!</span>
                                            Urgent
                                            <% } else if (agent.unreadCount> 0) { %>
                                                <span class="agent-list-item__badge agent-list-item__badge--unread">
                                                    <%= agent.unreadCount %>
                                                </span> Unread
                                                <% } else { %>
                                                    <span
                                                        class="agent-list-item__badge agent-list-item__badge--idle"></span>
                                                    Ready
                                                    <% } %>
                                    </span>
                                    <div class="agent-list-item__timestamps">
                                        <!-- Populated by JS on load -->
                                    </div>
                                </div>
                            </div>
                            <div class="agent-list-item__arrow">
                                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 5l7 7-7 7" />
                                </svg>
