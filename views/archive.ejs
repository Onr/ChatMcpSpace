<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Archive - ChatMCPSpace</title>
  <link rel="icon" type="image/png" href="/images/favicon.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .glass-panel {
      background: rgba(15, 23, 42, 0.5);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(148, 163, 184, 0.1);
    }

    .archive-card {
      transition: all 0.3s ease;
    }

    .archive-card:hover {
      transform: translateY(-2px);
      border-color: rgba(16, 185, 129, 0.3);
    }
  </style>
</head>

<body class="bg-slate-950 text-white overflow-x-hidden">
  <!-- Navigation Bar -->
  <nav class="sticky top-0 z-40 bg-slate-900/80 backdrop-blur border-b border-slate-800">
    <div class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
      </div>

      <div class="flex items-center gap-4">
        <a href="/dashboard"
          class="px-4 py-2 rounded-lg bg-slate-800 border border-slate-700 text-slate-300 hover:bg-slate-700 hover:text-white transition flex items-center gap-2 text-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l9-7 9 7v10H3z" />
          </svg>
          Dashboard
        </a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950">
    <div class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Header -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-4xl font-bold text-white mb-2">Archived Agents</h1>
          <p class="text-slate-400 text-sm">
            <%= totalCount %> agent<%= totalCount !== 1 ? 's' : '' %> archived
          </p>
        </div>
      </div>

      <!-- Search/Filter Bar -->
      <div class="mb-8 flex gap-3">
        <input type="text" id="archiveSearchInput" placeholder="Search archived agents..."
          class="flex-1 bg-slate-800/50 border border-slate-700 focus:border-emerald-400 focus:ring-1 focus:ring-emerald-400/50 text-white rounded-lg px-4 py-2.5 text-sm placeholder:text-slate-500 transition" />
        <button aria-label="Filter archived agents" class="px-4 py-2 rounded-lg bg-slate-800 border border-slate-700 text-slate-300 hover:bg-slate-700 hover:text-white transition">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
          </svg>
        </button>
      </div>

      <!-- Archived Agents Grid -->
      <% if (archivedAgents.length === 0) { %>
        <div class="glass-panel p-16 text-center rounded-2xl border border-slate-700">
          <svg class="w-20 h-20 mx-auto mb-4 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
          </svg>
          <h3 class="text-xl font-semibold text-slate-300 mb-2">No Archived Agents</h3>
          <p class="text-slate-500 text-sm">Archived agents will appear here</p>
        </div>
        <% } else { %>
          <div class="grid gap-5 md:grid-cols-2 lg:grid-cols-3">
            <% archivedAgents.forEach(agent=> { %>
              <%
                const archivedDate=new Date(agent.archived_at);
                const formattedDate=archivedDate.toLocaleDateString('en-US', {
                month: 'short', day: 'numeric', year: 'numeric' });
                const formattedTime=archivedDate.toLocaleTimeString('en-US', { hour: '2-digit' , minute:
                '2-digit', hour12: true });
                %>
                <div class="glass-panel p-6 rounded-2xl border border-slate-700 archive-card hover:border-emerald-400/30 transition group"
                  data-archived-agent-id="<%= agent.archived_agent_id %>"
                  data-agent-id="<%= agent.agent_id %>">
                  <!-- Agent Header -->
                  <div class="flex items-start gap-4 mb-5">
                    <div class="w-14 h-14 rounded-full bg-gradient-to-br from-emerald-500/30 to-cyan-500/30 flex items-center justify-center text-white font-bold text-lg border-2 border-slate-600 group-hover:border-emerald-400/50 transition">
                      <%= agent.agent_name.substring(0, 2).toUpperCase() %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <h3 class="text-lg font-semibold text-white truncate group-hover:text-emerald-300 transition">
                        <%= agent.agent_name %>
                      </h3>
                      <p class="text-xs text-slate-400 mt-0.5">
                        <%= agent.agent_type==='news_feed' ? 'üì∞ News Feed' : 'ü§ñ Standard Agent' %>
                      </p>
                    </div>
                  </div>

                  <!-- Metadata -->
                  <div class="space-y-2.5 mb-5 pb-5 border-b border-slate-700/50">
                    <div class="flex items-center gap-2 text-slate-400 text-xs">
                      <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <span><%= formattedDate %> at <%= formattedTime %></span>
                    </div>
                    <div class="flex items-center gap-2 text-slate-400 text-xs">
                      <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                      </svg>
                      <span><%= agent.total_messages %> message<%= agent.total_messages !==1 ? 's' : '' %></span>
                    </div>
                    <% if (agent.archive_reason) { %>
                      <div class="flex items-start gap-2 text-slate-400 text-xs">
                        <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                        </svg>
                        <span class="italic leading-relaxed">"<%= agent.archive_reason %>"</span>
                      </div>
                    <% } %>
                  </div>

                  <!-- Actions -->
                  <div class="flex gap-2 pt-2">
                    <button class="restore-agent-btn flex-1 px-3 py-2.5 rounded-lg bg-emerald-500/20 border border-emerald-500/40 text-emerald-400 text-xs font-semibold hover:bg-emerald-500/30 active:scale-95 transition flex items-center justify-center gap-1.5">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                      </svg>
                      Restore
                    </button>
                    <button class="delete-archived-agent-btn px-3 py-2.5 rounded-lg bg-red-500/20 border border-red-500/40 text-red-400 text-xs font-semibold hover:bg-red-500/30 active:scale-95 transition flex items-center justify-center gap-1.5">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                      Delete
                    </button>
                  </div>
                </div>
                <% }); %>
          </div>

          <!-- Pagination -->
          <% if (totalPages> 1) { %>
            <div class="mt-10 flex items-center justify-center gap-2 flex-wrap">
              <% if (currentPage> 1) { %>
                <a href="/archive?page=<%= currentPage - 1 %>"
                  class="px-4 py-2 rounded-lg bg-slate-800 border border-slate-700 text-slate-300 hover:bg-slate-700 hover:text-white active:scale-95 transition">
                  ‚Üê Previous
                </a>
                <% } %>

                  <% for (let i=Math.max(1, currentPage - 2); i <=Math.min(totalPages, currentPage + 2);
                    i++) { %>
                    <% if (i === currentPage) { %>
                      <span class="px-4 py-2 rounded-lg bg-emerald-500 text-slate-950 font-semibold text-sm">
                        <%= i %>
                      </span>
                    <% } else { %>
                      <a href="/archive?page=<%= i %>"
                        class="px-4 py-2 rounded-lg bg-slate-800 border border-slate-700 text-slate-300 hover:bg-slate-700 hover:text-white active:scale-95 transition">
                        <%= i %>
                      </a>
                    <% } %>
                    <% } %>

                      <% if (currentPage < totalPages) { %>
                        <a href="/archive?page=<%= currentPage + 1 %>"
                          class="px-4 py-2 rounded-lg bg-slate-800 border border-slate-700 text-slate-300 hover:bg-slate-700 hover:text-white active:scale-95 transition">
                          Next ‚Üí
                        </a>
                        <% } %>
            </div>
            <% } %>
              <% } %>
    </div>
  </div>

  <!-- Archive Page Script -->
  <script src="/js/archive.js"></script>
</body>

</html>
