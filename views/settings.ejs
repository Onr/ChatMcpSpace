  window.csrfToken = '<%= csrfToken %>';
  window.apiGuideConfig = <% - JSON.stringify({
    apiKey,
    baseUrl,
    defaultAgentName,
    encryptionSalt: typeof encryptionSalt !== 'undefined' ? encryptionSalt : null
  }) %>;
</script>
