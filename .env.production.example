# Production environment configuration
NODE_ENV=production
# Recommended: run app on unprivileged port behind reverse proxy
PORT=3000
# If you choose to bind directly to 80, update this to 80 and adjust system permissions accordingly.
BASE_URL=https://chatmcp.space
HTTPS_ENABLED=true
HTTPS_PORT=443
HTTPS_KEY_PATH=/etc/letsencrypt/live/chatmcp.space/privkey.pem
HTTPS_CERT_PATH=/etc/letsencrypt/live/chatmcp.space/fullchain.pem
# Optional: set if using a passphrase-protected key or custom CA
HTTPS_PASSPHRASE=
HTTPS_CA_PATH=
# Optional: start a small HTTP listener that redirects to HTTPS
ENABLE_HTTP_REDIRECT=true
HTTP_REDIRECT_PORT=80

# Database (populate from secret store)
DB_HOST=<PROD_DB_HOST>
DB_PORT=<PROD_DB_PORT>
DB_NAME=<PROD_DB_NAME>
DB_USER=<PROD_DB_USER>
DB_PASSWORD=<PROD_DB_PASSWORD>

# Redis (shared for sessions and rate limits)
# Use REDIS_URL or host/port/password/db values
REDIS_URL=<PROD_REDIS_URL>
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=<PROD_REDIS_PASSWORD>
REDIS_DB=0
REDIS_SESSION_DB=0
REDIS_RATE_DB=1

# Sessions
SESSION_SECRET=<PROD_SESSION_SECRET>

# Email Configuration (for email verification)
# For Gmail, use App Passwords: https://support.google.com/accounts/answer/185833
EMAIL_HOST=<PROD_EMAIL_HOST>
EMAIL_PORT=<PROD_EMAIL_PORT>
EMAIL_SECURE=<PROD_EMAIL_SECURE>
EMAIL_USER=<PROD_EMAIL_USER>
EMAIL_PASSWORD=<PROD_EMAIL_PASSWORD>
EMAIL_FROM=<PROD_EMAIL_FROM>
EMAIL_FROM_NAME=<PROD_EMAIL_FROM_NAME>
EMAIL_REPLY_TO=<PROD_EMAIL_REPLY_TO>

# Email Verification Settings
VERIFICATION_TOKEN_EXPIRY_HOURS=24

# Features
TTS_ENABLED=true
LOG_LEVEL=info

# Google TTS credentials (path on the server, not in git)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/prod-service-account.json

# Google OAuth Credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://chatmcp.space/auth/google/callback
